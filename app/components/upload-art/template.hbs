{{#if upload}}
  <div class="row mb-4">
    <div class="col">
      <div class="upload-dropzone">
        <div class="upload-text">
          {{upload.title}}
        </div>
        <div class="remove-upload">
          <i class="fa fa-times-circle remove-action" {{action 'removeUpload'}}></i>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-4 border-bottom">
    <div class="col-sm-5 mb-4">
      <div class="upload-preview">
        <img src="{{upload.base64}}" class="thumb">
        <div class="remove-upload">
          <i class="fa fa-times remove-action" {{action 'removeUpload'}}></i>
        </div>
      </div>
    </div>
    <div class="col-sm-7">
      <div class="form-group">
        <label for="art-description">Write a brief description of your artwork</label>
        {{textarea value=upload.description class="form-control" id="art-description" rows="5"}}
      </div>
      <div class="form-group add-tags">
        <label for="art-tags">Add tags</label>
        {{input value=tag type="text" class="form-control mb-3" id="art-tags" keyUp=(action 'createTag')}}
        {{#each upload.tags as |tag|}}
          <span class="badge badge-dark">
            {{tag}}
            <i class="fa fa-times remove-action" {{action 'removeTag' tag}}></i>
          </span>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="row mb-4 border-bottom">
    <div class="col">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="title">Title</label>
          {{input type="text" class="form-control w-80" value=upload.title id="title"}}
        </div>
        <div class="form-group col-md-4">
          <label>Surface</label>
          {{#power-select
            triggerClass="w-80"
            options=surfaceOptions
            selected=upload.surface
            onchange=(action (mut upload.surface)) as |surface|}}
            {{surface}}
          {{/power-select}}
        </div>
        <div class="form-group col-md-4">
          <label>Medium</label>
          {{#power-select
            triggerClass="w-80"
            options=mediumOptions
            selected=upload.medium
            onchange=(action (mut upload.medium)) as |medium|}}
            {{medium}}
          {{/power-select}}
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label>Art style</label>
          {{#power-select
            options=artStyles
            selected=upload.style
            triggerClass="w-80 mb-4"
            onchange=(action (mut upload.style)) as |style|}}
            {{style}}
          {{/power-select}}
          <label for="price">Price</label>
          <div class="price-input-wrapper">
            <input type="text" class="form-control w-80 price-input" id="price">
          </div>
        </div>
        <div class="form-group col-md-8">
          <label>Choose one or more subjects</label>
          <div class="row">
            {{#each groupedSubjects as |subjects groupIndex|}}
              <div class="col-{{groupedSubjects.length}}">
                {{#each subjects as |subject index|}}
                <div class="form-check">
                  {{input
                    class="form-check-input"
                    type="checkbox"
                    id=(concat 'subject-' groupIndex '-' index)
                    change=(action 'subjectSelect' subject)}}
                  <label class="form-check-label" for="subject-{{groupIndex}}-{{index}}">
                    {{subject}}
                  </label>
                </div>
                {{/each}}
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="row mb-4">
    <div class="col">
      <div class="upload-dropzone" ondrop={{action 'selectImage'}} ondragover={{action 'allowDrop'}}>
        <label class="upload-text">
          Add artwork <i class="fa fa-plus-circle"></i>
          <input type="file" accept="image/*" onchange={{action 'selectImage'}} hidden>
        </label>
      </div>
    </div>
  </div>
{{/if}}

<div class="row mb-4">
  <div class="col-md-12">
    <h3 class="text-center">Your details</h3>
  </div>
</div>
{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}
<form class="account-settings-form">
  <div class="row mb-4">
    <div class="col-md-6">

    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="first-name">First name</label>
        {{input type='text' class='form-control' value=model.firstName id='first-name'}}
      </div>
      <div class="form-group">
        <label for="last-name">Last name</label>
        {{input type='text' class='form-control' value=model.lastName id='last-name'}}
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        {{input type='text' class='form-control' value=model.location id='location'}}
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="form-group">
        <label for="statement">Artist statement</label>
        {{textarea value=model.statement class='form-control' id='statement' rows='5'}}
      </div>
    </div>
  </div>
  <button
    type="submit"
    class="btn btn-primary btn-sm float-right"
    disabled={{saveDetails.isRunning}}
    {{action (perform saveDetails)}}>
    {{if saveDetails.isRunning 'Saving' 'Save'}}
  </button>
</form>
